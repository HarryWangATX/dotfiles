# .local/bin

rm -rf /home/harry/dotfiles/config
rm -rf /home/harry/dotfiles/local
rm -rf /home/harry/dotfiles/xinitrc
rm -rf /home/harry/dotfiles/zshrc

echo "Removed All Folders"

mkdir /home/harry/dotfiles/local
mkdir /home/harry/dotfiles/config
mkdir /home/harry/dotfiles/local/bin

echo "Created config and local folders"

rsync -r "/home/harry/.config/nvim/" "/home/harry/dotfiles/config/nvim/"
rsync -r "/home/harry/.config/rofi/" "/home/harry/dotfiles/config/rofi/"
rsync -r "/home/harry/.config/cava/" "/home/harry/dotfiles/config/cava/"
rsync -r "/home/harry/.config/dunst/" "/home/harry/dotfiles/config/dunst/"
rsync -r "/home/harry/.config/picom/" "/home/harry/dotfiles/config/picom/"
rsync -r "/home/harry/.config/xmobar/" "/home/harry/dotfiles/config/xmobar/"
rsync -r "/home/harry/.config/xmonad/" "/home/harry/dotfiles/config/xmonad/"
rsync "/home/harry/.xinitrc" "/home/harry/dotfiles/xinitrc"
rsync "/home/harry/.zshrc" "/home/harry/dotfiles/zshrc"
rsync "/home/harry/.local/bin/changevolume" "/home/harry/dotfiles/local/bin/changevolume"
rsync "/home/harry/.local/bin/changebrightness" "/home/harry/dotfiles/local/bin/changebrightness"
rsync "/home/harry/.local/bin/wifimenu" "/home/harry/dotfiles/local/bin/wifimenu"
rsync "/home/harry/.local/bin/gitsyncdotfiles" "/home/harry/dotfiles/gitsyncdotfiles"

rm -rf /home/harry/dotfiles/config/nvim/.git /home/harry/dotfiles/config/nvim/.github

# Modify the lines of the
sed -i 's/^export [A-Za-z_/.%]*=.*/export REDACTED_SECRET/' /home/harry/dotfiles/zshrc

echo "Success!"

exit 0
